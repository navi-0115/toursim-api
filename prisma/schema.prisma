generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id       Int   @id @default(autoincrement())
  name     String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category Category @relation(fields: [categoryName], references: [name])
  categoryName String
}

model Category {
  id       Int   @id @default(autoincrement())
  name     String @unique
  places Place[]
}